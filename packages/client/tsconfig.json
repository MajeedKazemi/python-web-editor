{
  "extends": "../../tsconfig",
  "compilerOptions": {
      "rootDir": "src",
      "outDir": "lib",
      "declarationDir": "lib",
      "noUnusedParameters": false,
      "target": "ES2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "inlineSources": false,
      "stripInternal": true,
      "lib": [
        "es2016",
        "dom"
      ],
      "strict": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
